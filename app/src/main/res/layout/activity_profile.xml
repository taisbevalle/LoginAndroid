<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.taisbedendovalle.sistemaacademico.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="Portal do Aluno"
            android:textColor="#324a76"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="66dp"
            android:layout_height="62dp"
            android:background="@drawable/logo"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Bem-vindo João da Silva"
            android:id="@+id/profileEmail"
            android:textColor="#324a76"
            android:textSize="18sp" />

        <Button
            android:id="@+id/espaco_aluno"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#6495ed"
            android:text="Espaço do Aluno"
            android:textColor="#fff" />

        <Button
            android:id="@+id/financeiro"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#6495ed"
            android:text="Financeiro"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/meus_cursos"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#6495ed"
            android:text="Meus Cursos"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/notas"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#6495ed"
            android:text="Notas"
            android:radius="150dp"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/calendario"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#6495ed"
            android:text="Calendário"
            android:textColor="#fff"/>


    </LinearLayout>
</LinearLayout>